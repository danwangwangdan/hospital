<view class="container more">
  <view class="user flex-wrp">
    <view class="avatar flex-item">
      <image class="userinfo-avatar" src="../../pics/me_photo.png" background-size="cover"></image>
    </view>
    <view class="user-info flex-item">
      <text class="userinfo-nickname">{{nickname}}</text>
      <text class="edit">{{office}}  {{tel}}</text>
    </view>
  </view>

  <view class="my">
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item">
        <image src="../../pics/all.png" style="height:20px;weight:20px"></image>
      </view>
      <view class="myitem-name flex-item" bindtap="toAll">
        <text>全部故障</text>
      </view>
    </view>
    <view class="my-item flex-wrp" style="">
      <view class="myitem-icon2 flex-item">
        <image src="../../pics/processing.png" style="height:30px;width:30px"></image>
      </view>
      <view class="myitem-name flex-item" bindtap="toSubmitted">
        <text>待确认的故障</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon3 flex-item">
        <image src="../../pics/submitted.png" style="height:26px;width:26px"></image>
      </view>
      <view class="myitem-name flex-item" bindtap="toConfirmed">
        <text>已确认的故障</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon4 flex-item">
        <image src="../../pics/solved.png" style="height:30px;width:30px"></image>
      </view>
      <view class="myitem-name flex-item" bindtap="toSolved">
        <text>已解决的故障</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon5 flex-item">
        <image src="../../pics/advice.png" style="height:20px;weight:20px"></image>
      </view>
      <view class="myitem-name flex-item" bindtap="toSuggest">
        <text>意见反馈</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <i-button style="display:block;margin:0 auto;width:60%" bind:click="toLogout" type="primary" shape="circle">退出登录</i-button>
    </view>
  </view>
</view>