<wux-refresher id="wux-refresher" bind:refresh="onRefresh">
  <wux-tabs wx:if="{{isAdmin==0}}" controlled scroll current="{{ currentTab }}" bindchange="onChange">
    <wux-tab key="tab1" title="全部问题"></wux-tab>
    <wux-tab key="tab2" title="未确认问题"></wux-tab>
    <wux-tab key="tab3" title="已确认问题"></wux-tab>
    <wux-tab key="tab4" title="已解决问题"></wux-tab>
  </wux-tabs>
    <wux-tabs wx:if="{{isAdmin==1}}" controlled scroll current="{{ currentTab }}" bindchange="onChange">
    <wux-tab key="tab5" title="全部问题"></wux-tab>
    <wux-tab key="tab6" title="未解决问题"></wux-tab>
    <wux-tab key="tab7" title="我已解决问题"></wux-tab>
  </wux-tabs>
  <view style='{{height}}'>
    <scroll-view>
      <view style="margin-top:10px">
        <view style="margin-top:10px">
          <i-cell-group>
            <block wx:key="id" wx:for="{{troubleList}}">
              <i-cell data-id="{{item.id}}" label="{{item.office+item.troublePersonName}}" bindtap="toDetail" title="{{item.secType}}" value="{{item.submitTime}}">
                <i-icon wx:if="{{item.status==1}}" type="createtask" size="20" slot="icon" />
                <i-icon wx:elif="{{item.status==2}}" type="flashlight" size="20" slot="icon" />
                <i-icon wx:else="{{item.status==3}}" type="success" size="20" slot="icon" />
              </i-cell>
            </block>
          </i-cell-group>
        </view>
      </view>
    </scroll-view>
    <view wx:if="{{isNull}}" class='centerView'>
      <text style='color:#80848f'>{{initialText}}</text>
    </view>
  </view>
</wux-refresher>