  border-radius: 20px;
  width: 500px;
  height: 500px;
  position: absolute;
  left: 63%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

.inputViewHead {
  display: flex;
}

