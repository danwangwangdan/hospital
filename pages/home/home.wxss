.centerView {
  border-radius: 20px;
  width: 350px;
  height: 350px;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

.inputViewHead {
  display: flex;
}

.inputViewMiddle {
  margin-top: 10px;
  display: flex;
}

.inputViewTail {
  display: flex;
}

