.centerView {
  text-align: center;
  border-radius: 20px;
  width: 300px;
  height: 350px;
  position: absolute;
  left: 50%;
  top: 38%;
  transform: translate(-50%, -50%);
}
.circleBlue {
  width: 550rpx;
  line-height: 35rpx;
  color: rgb(255, 255, 255);
  font-size: 14px;
  padding-top: 11px;
  padding-bottom: 11px;
  padding-left: 56px;
  padding-right: 56px;
  border-width: 0px;
  border-color: rgb(197, 229, 145);
  border-style: solid;
  border-radius: 41px;
  background-color: rgb(45, 140, 240);
}

/*分割线样式*/

.divLine {
  background: #e9eaec;
  width: 100%;
  height: 5rpx;
  margin-top: 15px;
}

.footer {
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
  line-height: 50px;
}
