<wux-refresher id="wux-refresher" bind:refresh="onRefresh">
  <view wx:if="{{isAdmin==1}}">
    <i-tabs current="{{currentTab}}" bindchange="handleChange">
      <i-tab key="tab1" title="待确认" count="{{submitCount}}"></i-tab>
      <i-tab key="tab2" title="已确认" count="{{confirmCount}}"></i-tab>
    </i-tabs>
    <scroll-view style='{{height}}'>
      <view style="margin-top:10px">
        <i-cell-group>
          <block wx:key="id" wx:for="{{troubleList}}">
            <i-cell data-id="{{item.id}}" label="{{item.office+item.troublePersonName}}" bindtap="toDetail" title="{{item.secType}}" value="{{item.submitTime}}">
              <i-icon wx:if="{{item.status==1}}" type="createtask" size="20" slot="icon" />
              <i-icon wx:elif="{{item.status==2}}" type="flashlight" size="20" slot="icon" />
              <i-icon wx:else="{{item.status==3}}" type="success" size="20" slot="icon" />
            </i-cell>
          </block>
        </i-cell-group>
      </view>
    </scroll-view>
    <view class="wux-text--center" style="margin-top:60%" wx:if="{{isNull}}">
      <text style='color:#80848f'>{{initialText}}</text>
    </view>
  </view>
</wux-refresher>
<view class="add-page" wx:if="{{isAdmin==0}}">
  <form report-submit="true" bindsubmit='submitTrouble'>
    <wux-notice-bar loop speed="100" content="{{noticeText}}" />
    <view class="mod-a mt20">
      <view class="mod t-name">
        <text decode="{{true}}" class="key">申报人员</text>
        <input name="user" class="input" maxlength="100" value="{{username}}" bindinput="bindUserChange" />
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="divLine"></view>
      <view class="mod t-name">
        <text class="key">申报科室</text>
        <input name="office" class="input" maxlength="100" value="{{office}}" bindinput="bindOfficeChange" />
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="divLine"></view>
      <view class="mod t-name">
        <text class="key">联系电话</text>
        <input name="mobile" class="input" maxlength="100" value="{{mobile}}" bindinput="bindMobileChange" />
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="divLine"></view>
      <view class="mod t-name">
        <text class="key">处理科室</text>
        <view class="value" bindtap="showPicker">{{firTypeValue}}
          <image class="arrow-r" src="/pics/arrow_right.png"></image>
        </view>
      </view>
      <picker isShowPicker="{{isShowPicker}}" bindsure="firTypeChange" bindcancle="cancleCallBack" scrollType="normal" listData="{{firTypes}}" titleStyle="color:green;" titleText="请选择处理科室"></picker>
      <view class="divLine"></view>
      <view class="mod t-name">
        <text class="key">问题类型</text>
        <view class="value" bindtap="showPicker2">{{secTypeValue}}
          <image class="arrow-r" src="/pics/arrow_right.png"></image>
        </view>
      </view>
      <picker disabled="{{secDis}}" isShowPicker="{{isShowPicker2}}" bindsure="secTypeChange" bindcancle="cancleCallBack2" scrollType="normal" listData="{{secTypes}}" titleStyle="color:green;" titleText="请选择问题类型"></picker>
    </view>
    <view style = "display:{{isShowTextarea}}" class="mod-a mt20">
      <wux-cell-group>
        <wux-cell hover-class="none">
          <wux-textarea autoHeight controlled placeholder="简单描述一下遇到的问题，选填" bind:change="bindTextAreaChange" value="{{content}}" />
