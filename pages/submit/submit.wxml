<!-- 新建故障 -->
<view class="add-page">
  <form bindsubmit="submitForm">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{TopTips}}</view>
    <view class="mod-a mt20">
      <view class="mod t-name">
        <text class="key">故障人</text>
        <input name="user" class="input" maxlength="100"  value="{{username}}" />
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="mod t-name">
        <text class="key">所属科室</text>
        <input name="office" class="input" maxlength="100"  value="{{office}}" />
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="mod t-name">
        <text class="key">一级类型</text>
        <picker bindchange="firTypeChange" value="{{typeIndex}}" range="{{firTypes}}">
          <view class="value" name="firTypes">{{firTypes[firTypeIndex]}}
            <image class="arrow-r" src="/pics/arrow_right.png"></image>
          </view>
        </picker>
      </view>
       <view class="mod t-name">
        <text class="key">二级类型</text>
        <picker bindchange="secTypeChange" disabled="{{secTypeDis}}" value="{{typeIndex}}" range="{{secTypes}}">
          <view class="value" name="secTypes">{{secTypes[secTypeIndex]}}
            <image class="arrow-r" src="/pics/arrow_right.png"></image>
          </view>
        </picker>
      </view>
    </view>
    <view class="mod-a mt20">
      <view class="mod-big my-nick">
        <textarea name="content" class="weui-textarea" placeholder="请输入问题详细信息。注意附带病人住院号或床位号，打印机类型(A4/针式/条码)等关键信息..." value="{{content}}" style="height: 7em" bindinput="bindTextAreaChange" maxlength="{{noteMaxLen}}" />
        <view class="chnumber">{{noteNowLen}}/{{noteMaxLen}}</view>
      </view>
    </view>
    <view class="add_pic" bindtap="uploadPic" wx-if="{{!isSrc}}">
      <view>添加截图（可选）</view>
    </view>
    <view wx:if="{{isSrc}}" class="image_box" >
      <view class="picPre">
        <image src="{{src}}" mode="aspectFit" bindtap="previewImage"></image>
        <view bindtap="clearPic"></view>
      </view>
    </view>
    <view>
          <i-button style="display:block;margin:0 auto;width:60%;margin-top:30px" bind:click="submitSuc" type="primary" shape="circle">提交</i-button>
    </view>
  </form>
</view>