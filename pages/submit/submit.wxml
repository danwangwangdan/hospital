<!-- 新建故障 -->
<view class="add-page">
  <form bindsubmit="submitForm">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{TopTips}}</view>

    <view class="mod-a mt20">
      <view class="mod t-name">
        <text class="key">故障人</text>
        <input name="title" class="input" maxlength="100" placeholder="黄士明" value="{{title}}" />
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="mod t-name">
        <text class="key">所属科室</text>
        <input name="title" class="input" maxlength="100" placeholder="网络中心" value="{{title}}" />
        <!-- <text name="address" class="value" bindtap="addressChange" placeholder="网络中心" value="{{address}}">网络中心</text> -->
        <image class="arrow-r" src="/pics/arrow_right.png"></image>
      </view>
      <view class="mod t-sign-time">
        <text class="key">故障类型</text>
        <picker bindchange="bindTypeChange" value="{{typeIndex}}" range="{{types}}">
          <view class="value" name="types">{{type}}
            <image class="arrow-r" src="/pics/arrow_right.png"></image>
          </view>
        </picker>
      </view>
    </view>
    <view class="mod-a mt20">
      <view class="mod-big my-nick">
        <textarea name="content" class="weui-textarea" placeholder="请输入问题详细描述。注意附带病人住院号或床位号，打印机类型(A4/针式/条码)等关键信息..." value="{{content}}" style="height: 7em" bindinput="bindTextAreaChange" maxlength="{{noteMaxLen}}" />
        <view class="chnumber">{{noteNowLen}}/{{noteMaxLen}}</view>
      </view>
    </view>
    <view class="add_pic" bindtap="uploadPic" wx-if="{{!isSrc}}">
      <view>添加截图（可选）</view>
    </view>
    <view wx:if="{{isSrc}}" class="image_box">
      <view class="picPre">
        <image src="{{src}}" mode="aspectFit"></image>
        <view bindtap="clearPic"></view>
      </view>
    </view>
    <view class="mod-a mt20"></view>
    <view style='margin-top:25px;align:center'>
      <button style='width: 60%;background-color: #2d8cf0;' type="primary" bindtap="primary" bindtap="submitSuc">提交</button>
    </view>
  </form>
</view>